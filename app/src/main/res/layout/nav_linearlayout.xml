<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/nav_relativeLayout_chat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/padding_nav">
        <RelativeLayout
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView_main_nav_chat"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/tab_weixin" />

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_main_nav_chat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="萌聊"
                android:textColor="@color/text_98"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/unread_background"
                android:gravity="center"
                android:text="7"
                android:visibility="gone"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_relativeLayout_favorities"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/padding_nav">
    <RelativeLayout
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView_main_nav_favorities"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/tab_contact_list" />

            <TextView
                android:id="@+id/tv_contact_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_main_nav_favorities"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="收藏夹"
                android:textColor="@color/text_98"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/unread_address_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/unread_background"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="7"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_relativeLayout_discover"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/padding_nav" >
        <RelativeLayout
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView_main_nav_discover"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/tab_find" />

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_main_nav_discover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="发现"
                android:textColor="@color/text_98"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/unread_find_number"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/unread_background"
                android:gravity="center"
                android:text=""
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_relativeLayout_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/padding_nav" >

        <ImageView
            android:id="@+id/imageView_main_nav_me"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/tab_profile" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_main_nav_me"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="我"
            android:textColor="@color/text_98"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>